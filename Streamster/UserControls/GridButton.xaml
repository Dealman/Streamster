<UserControl x:Class="Streamster.UserControls.GridButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Streamster.UserControls"
             mc:Ignorable="d"
             BorderBrush="White"
             BorderThickness="1" Loaded="UserControl_Loaded" x:Name="GridButtonControl" MinWidth="28" MaxWidth="28" MinHeight="28" MaxHeight="28">
    <Grid x:Name="ButtonBackground" Background="Transparent" MouseEnter="GridButton_MouseEnter" MouseLeave="GridButton_MouseLeave" MouseUp="GridButton_MouseUp">
        <iconPacks:PackIconFontAwesome x:Name="ButtonIcon" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="White" Kind="{Binding ElementName=GridButtonControl, Path=Icon}"/>
    </Grid>
</UserControl>
